mixin edicionProyecto(proyecto={})

    form(action=`/nuevo-proyecto/${proyecto.id || ''}` method="POST").agregar-proyecto
        .campo 
            label(for="nombre") Nombre del Proyecto:
            input( value=proyecto.nombre type="text" id="nombre" name="nombre" placeholder="Nombre del Nuevo Proyecto" autocomplete="off") 
        .campo-enviar 
            input(type="submit" value=`${proyecto.nombre ? 'Guardar' : 'Crear'}`  class="boton")